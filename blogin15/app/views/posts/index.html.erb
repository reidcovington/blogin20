<h1>My Blog!</h1>
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <div class="enrty">
    <%= post.body %>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= button_to "Delete", post_path(post),
            :confirm => "Are you sure?!", :method => :delete %>
    <hr />
  </div>
<% end %>
<%= link_to "New Post", new_post_path %>
